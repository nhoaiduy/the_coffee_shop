
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="content">
        <h2 style="text-align: center; color: var(--primary-color);">ĐĂNG KÝ TÀI KHOẢN</h2>
        <h3 style="margin-left:32px;">Thông tin cá nhân</h3>
        @using (Html.BeginForm("GhiNhanDangKy", "TaiKhoan", new { area = "" }, FormMethod.Post))
        {
            <div class="form-group form-group-ci row">
                <div class="form-group form-group-ci">
                    Họ tên
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="ten" name="" value="" />
                        </div>
                    </div>

                </div>
                <div class="form-group form-group-ci">
                    SĐT
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="sdt" name="" value="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-ci row">
                <div class="form-group form-group-ci">
                    Ngày sinh
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="ngaysinh" name="" value="" />
                        </div>
                    </div>

                </div>
                <div class="form-group form-group-ci">
                    Địa chỉ
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="diachi" name="" value="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-ci row">
                <div class="form-group form-group-ci">
                    Email
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="email" name="" value="" />
                        </div>
                    </div>

                </div>
                <div class="form-group form-group-ci">
                    Địa chỉ 2
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="diachi2" name="" value="" />
                        </div>
                    </div>
                </div>
            </div>
            <h3 style="margin-left:32px;">Thông tin tài khoản</h3>
            <div class="form-group form-group-ci row">
                <div class="form-group form-group-ci">
                    Tên đăng nhập
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="username" name="" value="" />
                        </div>
                    </div>

                </div>
                <div class="form-group form-group-ci">
                    Mật khẩu
                    <div class="col-md-10">
                        <div class="form-control">
                            <input type="text" id="password" name="" value="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-ci" style="justify-content:center; margin-top: 30px;">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" name="" class="btn-default btn-color" value="Đăng ký" style="cursor:pointer;" />
                </div>
            </div>

        }

    </div>
</div>

